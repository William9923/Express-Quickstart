{
  "name": "boiler-plate-typescript",
  "version": "1.0.0",
  "description": "A simple local library application using typescript",
  "main": "index.js",
  "author": "William",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf dist && npm run build-ts && npm run lint && npm run copy-static-assets",
    "compile": "tsc && npm run copy-static-assets",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "start": "npm run compile && node dist/server.js",
    "dev": "nodemon .",
    "clean": "rm -rf node_modules && rm -rf dist",
    "test": "jest --forceExit --coverage --verbose"
  },
  "dependencies": {
    "async": "^3.1.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-validator": "^6.2.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.19",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.9",
    "nodemailer": "^6.3.0",
    "pug": "^2.0.4",
    "uuidv4": "^6.2.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/concurrently": "^4.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-flash": "0.0.2",
    "@types/jest": "^24.0.23",
    "@types/jquery": "^3.3.31",
    "@types/jsonfile": "^6.0.0",
    "@types/lodash": "^4.14.141",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^12.7.8",
    "@types/node-sass": "^4.11.0",
    "@types/pug": "^2.0.4",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "node-sass": "^4.14.1",
    "nodemon": "^1.19.2",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
